<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:id="@+id/old_password_ll"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <TextView android:text="@string/old_password"
            android:layout_width="100dip"
            android:layout_height="wrap_content"/>"
        <EditText android:id="@+id/old_password_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textPassword"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/new_password_ll"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <TextView android:text="@string/new_password"
            android:layout_width="100dip"
            android:layout_height="wrap_content" />
        <EditText android:id="@+id/new_password_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textPassword"/>
    </LinearLayout>
    
    <Button android:id="@+id/set_password_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" 
        android:layout_marginTop="10dip"
        android:text="@string/set_password"/>
    
</LinearLayout>
</FrameLayout>
